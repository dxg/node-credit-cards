{
  "compilerOptions": {
    "declaration"     : true,
    "esModuleInterop" : true,
    "module"          : "commonjs",
    "moduleResolution": "node",
    "outDir"          : "lib/",
    "strictNullChecks": true,
    "target"          : "es2019",
    "typeRoots"       : [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/*.ts",
    "test/*.ts"
  ]
}
